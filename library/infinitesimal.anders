-- de Rham Stack
def Œπ (A : U) (a : A) : ‚Ñë A := ‚Ñë-unit a
def Œº (A : U) (a : ‚Ñë (‚Ñë A)) := ‚Ñë-join a

def isCoreduced (A : U) : U := isEquiv A (‚Ñë A) (Œπ A)
def ImCoreduced (A : U) : isCoreduced (‚Ñë A) :=
isoToEquiv (‚Ñë A) (‚Ñë (‚Ñë A)) (Œπ (‚Ñë A)) (Œº A) (Œª (x : ‚Ñë (‚Ñë A)), <_> x) (Œª (y : ‚Ñë A), <_> y)

def ind-‚ÑëŒ≤ (A : U) (B : ‚Ñë A -> U) (f : Œ† (a : A), ‚Ñë (B (Œπ A a))) (a : A) :
  Path (‚Ñë (B (Œπ A a))) (ind-‚Ñë A B f (Œπ A a)) (f a) :=
<_> f a

def trans-‚Ñë (A : I ‚Üí U) (a : A 0) : ‚Ñë (A 1) :=
‚Ñë-unit (transp (<i> A i) 0 a)

def trans-‚Ñë‚Ä≤ (A : I ‚Üí U) (a : A 0) : ‚Ñë (A 1) :=
transp (<i> ‚Ñë (A i)) 0 (‚Ñë-unit a)

def trans-‚Ñë-is-correct (A : I ‚Üí U) (a : A 0) :
  Path (‚Ñë (A 1)) (trans-‚Ñë A a) (trans-‚Ñë‚Ä≤ A a) :=
<_> trans-‚Ñë A a

def ImInduction (A : U) (B : ‚Ñë A -> U) (c : Œ† (a : ‚Ñë A), isCoreduced (B a))
  (f : Œ† (a : A), B (Œπ A a)) (a : ‚Ñë A) : B a :=
(c a (ind-‚Ñë A B (Œª (x : A), Œπ (B (Œπ A x)) (f x)) a)).1.1

axiom ImComputeInduction (A : U) (B : ‚Ñë A -> U) (c : Œ† (a : ‚Ñë A), isCoreduced (B a))
  (f : Œ† (a : A), B (Œπ A a)) (a : A) : Path (B (Œπ A a)) (f a) ((ImInduction A B c f) (Œπ A a))
--<i> ‚Ñë-join ((c (‚Ñë-unit a) (‚Ñë-unit (f a))).1.2 @ i)

def ImRecursion (A B : U) (c : isCoreduced B) (f : A -> B) : ‚Ñë A -> B
 := ImInduction A (Œª (_ : ‚Ñë A), B) (Œª (_ : ‚Ñë A), c) f

def ImComputeRecursion (A B : U) (c : isCoreduced B) (f : A -> B) (a : A) : PathP (<_> B) (f a) ((ImRecursion A B c f) (Œπ A a))
 := ImComputeInduction A (Œª (_ : ‚Ñë A), B) (Œª (_ : ‚Ñë A), c) f a

def ImApp (A B : U) (f : A -> B) : ‚Ñë A -> ‚Ñë B := ImRecursion A (‚Ñë B) (ImCoreduced B) (‚àò A B (‚Ñë B) (Œπ B) f)
def ImNaturality (A B : U) (f : A -> B) : Œ† (a : A), Path (‚Ñë B) ((Œπ B) (f a)) ((ImApp A B f) (Œπ A a))
 := ImComputeRecursion A (‚Ñë B) (ImCoreduced B) (‚àò A B (‚Ñë B) (Œπ B) f)

def ~ (X : U) (a x' : X) : U := Path (‚Ñë X) (Œπ X a) (Œπ X x')
def ùîª (X : U) (a : X) : U := Œ£ (x' : X), ~ X a x'
def unitDisc (X : U) (x : ‚Ñë X) : U := Œ£ (x' : X), Path (‚Ñë X) x (Œπ X x')
def starDisc (X : U) (x : X) : ùîª X x := (x, idp (‚Ñë X) (Œπ X x))
def formalDiscBundle (A : U) : U := Œ£ (a : A), ùîª A a

def preservesInifinitesimalProximity (X Y : U) (x x' : X) (f : X -> Y) (p : ~ X x x') : ~ Y (f x) (f x') :=
<i> hcomp (‚Ñë Y) (‚àÇ i) (Œª (j : I), [(i = 0) ‚Üí ImNaturality X Y f x @ -j, (i = 1) ‚Üí ImNaturality X Y f x' @ -j]) (ImApp X Y f (p @ i))

def d (X Y : U) (f : X -> Y) (x : X) (Œµ : ùîª X x) : ùîª Y (f x)
 := (f Œµ.1, preservesInifinitesimalProximity X Y x Œµ.1 f Œµ.2)

axiom lemma45 (A B C : U) (f : A -> B) (g : B -> C) (x : A)
  : Path ((ùîª A x -> ùîª C ((‚àò A B C g f) x)))
         (d A C (‚àò A B C g f) x)
         (‚àò (ùîª A x) (ùîª B (f x)) (ùîª C ((‚àò A B C g f) x)) (d B C g (f x)) (d A B f x))
